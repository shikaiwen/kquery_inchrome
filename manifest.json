{
  "manifest_version": 2,
  "name": "wordmem",
  "description": "words remembering tool",
   // "devtools_page": "devtools.html",
  "version": "1.0",
  "background":{
      "scripts":["background.js","jquery-1.12.4.js"]
  },
  "content_scripts":[
    {"matches":["<all_urls>"],"js":["content.js","jquery-1.12.4.js"]}
  ],
  "browser_action": {
    // "default_icon": "icon.png"
    // "default_popup": "popup.html",
    // "default_title":"Click here!"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}