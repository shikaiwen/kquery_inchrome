{
  "manifest_version": 2,
  "name": "wordmem",
  "description": "words remembering tool",
  "version": "1.0",
  "background":{
      "scripts":["background.js","jquery-1.12.4.js","datatube.js","jquery-ui/jquery-ui.js","storage.js"]
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
    "js":[
      "jquery-1.12.4.js",
      "jquery.formhelper.js",
      "content.js",
      "datatube.js",
      "storage.js"
    ]
  }
  ],
  "browser_action": {
  },
  "web_accessible_resources": ["template.html","btn_myword_add.gif","btn_myword_del.gif","wordlib.html"],

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "options.html",
  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Toggle feature foo"
    }
  }
}

